# SETTINGS
set -g default-terminal "tmux-256color" # color terminal for vim
set -sg escape-time 10 # so that esc doesn't take 1 second in vim

# Coding layout
new -s coding -c "$PROJ" # new coding session
setw -g mouse on
renamew Editor # rename current window to Editor
neww -c "$PROJ" -n Terminal # create new window named Terminal
split-window -c "$PROJ" -h -t Terminal # splits Terminal window vertically
select-pane -L
select-window -t Editor # Go back to Editor window

# vim keybinds
unbind l
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R
